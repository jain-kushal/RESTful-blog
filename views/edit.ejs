<% include partials/header %>

<div class="ui main text container segment">
    
    <div class="ui huge header">Edit <%= foundBlog.title %></div>
    
    <form class="ui form" action="/blogs/<%= foundBlog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= foundBlog.title %>" required>
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<%= foundBlog.image %>" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%= foundBlog.body %></textarea>
        </div>
        <input class="ui inverted secondary button big" type="submit">
    </form>
</div>

<% include partials/footer %>